{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/env.d.ts",
    "src/**/*",
    "src/**/*.tsx",
    "lib/*.js",
    "electron/preload/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "outDir": "/out",
    "jsx": "react-jsx",
    "noImplicitReturns": false,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "exclude": ["out/**/*"]
}
